<Window x:Class="Protikhina.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Protikhina"
        mc:Ignorable="d"
        Title="Панель админ истратора" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Aquamarine" Offset="0.0"/>
            <GradientStop Color="Black" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <DataGrid x:Name="Users"
        AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  Margin="10,10,10,10"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding lastname}" Width="Auto"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding firstname }" Width="Auto"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding role}" Width="Auto"/>
                    <DataGridTextColumn Header="Логин" Binding="{Binding username}" Width="Auto"/>
                    <DataGridTextColumn Header="Заблокирован" Binding="{Binding IsLocked}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
                  
        <Button Content="Добавить пользователя" HorizontalAlignment="Left" Height="31" Margin="58,378,0,0" VerticalAlignment="Top" Width="211"/>
        <Button Content="Разблокировать" HorizontalAlignment="Left" Height="31" Margin="305,378,0,0" VerticalAlignment="Top" Width="211"/>
        <Button Content="Сохранять изменения" HorizontalAlignment="Left" Height="31" Margin="558,378,0,0" VerticalAlignment="Top" Width="211"/>
        

    </Grid>
</Window>
